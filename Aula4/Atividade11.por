programa
{
	
	funcao inicio()
	{
      // Escreva um algoritmo em PORTUGOL que leia um número e informe se ele é divisível por 3 e por 7.

       inteiro numero
        
          escreva ("Informe o número: ")
          leia ( numero )

          se (numero % 3 == 0 e numero % 7 == 0)
          escreva ("O Número é divisivel por 3 e 7 !")

          senao 
          escreva ("Não é divisivel por 3 e 7 ! ")
	
	}
}
